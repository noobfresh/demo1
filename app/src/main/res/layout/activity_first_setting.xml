<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.demo1.view.Activity.FirstSettingActivity"
    android:orientation="vertical"
    android:background="#fff">


    <LinearLayout style="@style/wrap_layout">
        <View style="@style/bg_line"/>
        <LinearLayout style="@style/base_layout"
            android:id="@+id/linearSetting5"
            android:background="@drawable/setting_selector">
            <TextView style="@style/usertext"
                android:text="账号与安全"
                android:id="@+id/textAccount"/>
        </LinearLayout>
        <View style="@style/bg_line"/>

    </LinearLayout>


    <LinearLayout style="@style/wrap_layout" >
        <!-- 上圆角-->
        <View style="@style/bg_line"/>
        <LinearLayout style="@style/base_layout"
            android:id="@+id/linearSetting1"
            android:background="@drawable/setting_selector">
            <TextView style="@style/usertext"
                android:text="新消息提醒"
                android:id="@+id/textNewMsgInform"/>
        </LinearLayout>

        <View style="@style/bg_line"/>
        <LinearLayout style="@style/base_layout"
            android:id="@+id/linearSetting2"
            android:background="@drawable/setting_selector">
            <TextView style="@style/usertext"
                android:text="聊天"
                android:id="@+id/textChat"/>
        </LinearLayout>

        <View style="@style/bg_line"/>

        <LinearLayout style="@style/base_layout"
            android:id="@+id/linearSetting3"
            android:background="@drawable/setting_selector">
            <TextView style="@style/usertext"
                android:text="隐私"
                android:id="@+id/textPrivacy"/>
        </LinearLayout>
        <View style="@style/bg_line"/>

    </LinearLayout>

    <LinearLayout style="@style/wrap_layout">
        <View style="@style/bg_line"/>
        <LinearLayout style="@style/base_layout"
            android:id="@+id/linearSetting4"
            android:background="@drawable/setting_selector">
            <TextView style="@style/usertext"
                android:text="关于PENGYANGFAN"
                android:id="@+id/textAbout"/>
        </LinearLayout>
        <View style="@style/bg_line"/>
        <LinearLayout style="@style/base_layout"
            android:id="@+id/linearSetting6"
            android:background="@drawable/setting_selector">
            <TextView style="@style/usertext"
                android:text="帮助与反馈"
                android:id="@+id/textHelp"/>
        </LinearLayout>
        <View style="@style/bg_line"/>
    </LinearLayout>

</LinearLayout>